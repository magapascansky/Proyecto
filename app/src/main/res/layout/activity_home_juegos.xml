<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.proyecto.proyecto.HomeJuegos"
    android:background="@drawable/backgroundjuegos">

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Memotest con sonidos"
        android:id="@+id/btnMemotest"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:textSize="40dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Asociacion de sonidos"
        android:id="@+id/btnAsociacion"
        android:layout_alignBottom="@+id/btnMemotest"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Memoria y sonidos"
        android:id="@+id/btnMemoria"
        android:layout_alignTop="@+id/btnAsociacion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="A bailar"
        android:id="@+id/btnBailar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="122dp"
        android:layout_marginStart="122dp"
        android:layout_marginBottom="100dp"
        android:textSize="40dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Freestyle"
        android:id="@+id/btnFreestyle"
        android:layout_alignTop="@+id/btnBailar"
        android:layout_alignRight="@+id/btnMemoria"
        android:layout_alignEnd="@+id/btnMemoria"
        android:layout_marginRight="136dp"
        android:layout_marginEnd="136dp"
        android:textSize="40dp" />

</RelativeLayout>
