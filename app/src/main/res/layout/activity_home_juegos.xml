<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.proyecto.proyecto.HomeJuegos"
    android:background="@drawable/backgroundjuegos">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Memotest con sonidos"
            android:id="@+id/btnMemotest"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="40dp"
            android:layout_weight="0.3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Asociacion de sonidos"
            android:id="@+id/btnAsociacion"
            android:layout_alignBottom="@+id/btnMemotest"
            android:layout_centerHorizontal="true"
            android:textSize="40dp"
            android:layout_weight="0.3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Memoria y sonidos"
            android:id="@+id/btnMemoria"
            android:layout_alignTop="@+id/btnAsociacion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="40dp"
            android:layout_weight="0.3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="A bailar"
            android:id="@+id/btnBailar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="40dp"
            android:layout_weight="0.3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Freestyle"
            android:id="@+id/btnFreestyle"
            android:layout_alignTop="@+id/btnBailar"
            android:layout_alignRight="@+id/btnMemoria"
            android:layout_alignEnd="@+id/btnMemoria"
            android:textSize="40dp"
            android:layout_weight="0.3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Sala de Trofeos"
            android:id="@+id/btnTrofeos"
            android:textSize="40dp"
            android:layout_weight="0.3" />
    </LinearLayout>

</LinearLayout>
